{% extends 'base.html.twig' %}

{% block title %}Hello GroupesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    h1{
        text-align : center
    }
    h2{
        text-align : center
    }

    ul li {
        text-align : center;
        list-style-type : none;
    }
    ul li a {
        text-decoration : none;
    }
</style>

<div class="example-wrapper">
    <h1>👩‍👩‍👧‍👧👨‍👦Liste des groupes👩‍👩‍👧‍👧👨‍👦 </h1>

    <h2>Voici les différents groupes :</h2>
    <h4>(Obtenez la liste des ulisiteurs composant le groupe en cliquant sur le nom de celui-ci)</h4>
    <ul>
        {% for groupe in groupes %}
        <li><a href="{{ path('groupes_id', {id: groupe.id}) }}">{{ groupe.nom }}</a></li>

        {% endfor %}
    </ul>
</div>
{% endblock %}
